{
    "version": "2012-10-17",
    "Statement": [
        {
            "Sid": "BroadAllows",
            "Effect": "Allow",
            "Action": [
                "autoscaling:*",
                "cloudformation:*",
                "cloudwatch:*",
                "elasticloadbalancing:*"
            ],
            "Resource":"*"
        },
        {
            "Sid": "AllowReadWrite",
            "Effect":"Allow",
            "Action":[
                "s3:GetObject",
                "s3:PutObject"
            ],

            "Resource":[
                "arn:aws:s3:::<Bucket Name>"
            ]
        },
        {
            "Sid":"AllowPassRole",
            "Effect":"Allow",
            "Action":"iam:PassRole",
            "Resource": "IAM role name"
        }
    ]
}



